<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:id="@+id/rl_menu_head"
        android:orientation="horizontal"
        android:background="@color/default_menu_back"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/tv_menu_title"
            android:layout_width="wrap_content"
            android:textColor="@color/default_menu_text"
            android:textSize="15sp"
            android:text="111"
            android:layout_centerInParent="true"
            android:layout_height="wrap_content" />
        <ImageView
            android:id="@+id/iv_menu_arrow"
            android:layout_width="15dp"
            android:layout_marginLeft="3dp"
            android:layout_toRightOf="@+id/tv_menu_title"
            android:layout_centerVertical="true"
            android:layout_height="15dp" />

    </RelativeLayout>

    <ImageButton
        android:id="@+id/lv_clear"
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:paddingRight="5dp"
        android:paddingBottom="5dp"
        android:background="@android:color/transparent"
        android:layout_alignParentRight="true"
        android:layout_gravity="right"
        android:layout_below="@+id/rl_menu_head"
        android:src="@drawable/ic_clear_all_black_48dp"
        android:visibility="gone"/>

</LinearLayout>